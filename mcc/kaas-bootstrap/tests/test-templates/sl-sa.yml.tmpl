---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: COMMON_NAME
  namespace: SL_NAMESPACE_VALUE
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: COMMON_NAME
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: COMMON_NAME
subjects:
  - kind: ServiceAccount
    name: COMMON_NAME
    namespace: SL_NAMESPACE_VALUE
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: COMMON_NAME
  namespace: SL_NAMESPACE_VALUE
rules:
  - apiGroups:
      - '*'
    resources:
      - '*'
    verbs:
      - '*'
